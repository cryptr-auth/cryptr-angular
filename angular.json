{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"@cryptr/cryptr-angular": {
			"projectType": "library",
			"root": "projects/cryptr/cryptr-angular",
			"sourceRoot": "projects/cryptr/cryptr-angular/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"tsConfig": "projects/cryptr/cryptr-angular/tsconfig.lib.json",
						"project": "projects/cryptr/cryptr-angular/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/cryptr/cryptr-angular/tsconfig.lib.prod.json"
						}
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/cryptr/cryptr-angular/src/test.ts",
						"tsConfig": "projects/cryptr/cryptr-angular/tsconfig.spec.json",
						"karmaConfig": "projects/cryptr/cryptr-angular/karma.conf.js"
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"projects/cryptr/cryptr-angular/tsconfig.lib.json",
							"projects/cryptr/cryptr-angular/tsconfig.spec.json"
						],
						"exclude": [
							"**/node_modules/**"
						]
					}
				}
			},
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			}
		}
	},
	"defaultProject": "@cryptr/cryptr-angular"
}